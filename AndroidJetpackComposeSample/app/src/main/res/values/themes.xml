<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidJetpackComposeSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/common_ui_primary</item>
        <item name="colorPrimaryVariant">@color/common_ui_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/common_ui_secondary</item>
        <item name="colorSecondaryVariant">@color/common_ui_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AndroidJetpackComposeSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidJetpackComposeSample.NoActionBar.FullScreen">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>


    <style name="Theme.AndroidJetpackComposeSample.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/ic_splash_square</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>


    <style name="Theme.AndroidJetpackComposeSample.NoActionBar.Splash">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="Theme.AndroidJetpackComposeSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidJetpackComposeSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/navigation_app_permission">

    <fragment
        android:id="@+id/navigation_app_permission"
        android:name="com.nxg.androidsample.permissions.PermissionsFragment"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_permission_to_main"
            app:destination="@id/navigation_app_main" />
    </fragment>

    <fragment
        android:id="@+id/navigation_app_main"
        android:name="com.nxg.androidsample.main.MainFragment"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_navigation_home_to_av_nav_graph"
            app:destination="@id/av_nav_graph" />

        <action
            android:id="@+id/action_navigation_home_to_nui_nav_graph"
            app:destination="@id/nui_nav_graph" />

    </fragment>


    <include app:graph="@navigation/av_nav_graph" />
    <include app:graph="@navigation/nui_nav_graph" />

</navigation>